    Layout = null;
}
@{
   
    List<Pizza> pizze = new List<Pizza>();

    pizze.Add(new Pizza("Marinara", "Pomodoro, ciliegino, aglio, origano", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 4.90));
    pizze.Add(new Pizza("Margherita", "Pomodoro, mozzarella", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 4.50));
    pizze.Add(new Pizza("Romana", "Pomodoro, mozzarella, acciughe", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 6.00));
    pizze.Add(new Pizza("Prosciutto", "Pomodoro, mozzarella, prosciutto", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 6.00));
    pizze.Add(new Pizza("Funghi", "Pomodoro, mozzarella, funghi freschi", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 6.50));
    pizze.Add(new Pizza("Carciofi", "Pomodoro, mozzarella, carciofi", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 6.00));
    pizze.Add(new Pizza("Diavola", "Pomodoro, mozzarella, salamino piccante", "https://static6.depositphotos.com/1000814/612/v/600/depositphotos_6125994-stock-illustration-pizza-salami.jpg", 5.50));
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- link css-->
    <link href="~/css/site.css" rel="stylesheet" />
    <title>I miei post</title>
</head>

<body>
    <div class="container">

        <header>
            <ul>
                <li><a href="/"> Menu </a></li>
                <li><a href="/"> About Us </a></li>
                <li><a href="/"> Contatti </a></li>
            </ul>
        </header>


        
        <main>
        
            <h1 class="text-center mb-5">Le nostre pizze</h1>
            @foreach(Pizza pizza in pizze)
            {
                <div class="card d-flex flex-row justify-content-between mb-4">
                    <div class="col-5">
                        <h3>@pizza.Name </h3>
                        <p>@pizza.Description</p>
                        <p>Prezzo: @pizza.Price &euro;</p>
                    </div>
                   
                    <div class="col-5">
                        <img class="w-50" src="@pizza.Img" />
                    </div>
                </div>
            } 
        </main>
              
    </div>
</body>

</html>